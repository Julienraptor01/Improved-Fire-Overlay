    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/santapexie_soulflame/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "com.santapexie.santapexie_soulflame.Main"
    ]
  },
  "mixins": [
    "santapexie_soulflame.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.17.x"
  },
  "suggests": {
